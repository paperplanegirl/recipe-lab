<h1>Edit course: <%= @course.name %></h1>

<%= form_for :course, url: course_path(@course), method: :patch do |f| %>

  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@course.errors.count, "error") %> prohibited
        this artist from being saved:
      </h2>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :recipes %><br>
    <%= f.select :recipe_ids, Recipe.all.collect {|x| [x.name, x.id]}, {}, :multiple => true  %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', course_path(@course) %>
